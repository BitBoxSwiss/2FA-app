<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="5" id="com.digitalbitbox.tfa" ios-CFBundleVersion="2.0.0" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"><!-- MATCH VERSIONS in main.js -->
    <name>DigitalBitbox2FA</name>
    <description>Verify Digital Bitbox actions.</description>
    <author email="info@digitalbitbox.com" href="http://digitalbitbox.com">Digital Bitbox</author>
    <content src="index.html" />
    <access origin="*" />
    <!-- blockchain parsing sites -->
    <allow-intent href="https://insight.bitpay.com/*" />
    <allow-intent href="https://blockexplorer.com/*" />
    <allow-intent href="https://blockchain.info/*" />
    <allow-intent href="gap://*" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />

    <icon src="www/img/icons/logo_circle_bg.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    
    <platform name="android">
        <icon density="ldpi" src="www/img/icons/logo-android-round/drawable-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="www/img/icons/logo-android-round/drawable-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="www/img/icons/logo-android-round/drawable-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="www/img/icons/logo-android-round/drawable-xhdpi/ic_launcher.png" />
        <splash density="port-ldpi" src="www/img/splash.png" />
        <splash density="port-mdpi" src="www/img/splash.png" />
        <splash density="port-hdpi" src="www/img/splash.png" />
        <splash density="port-xhdpi" src="www/img/splash.png" />
        <splash density="land-ldpi" src="www/img/splash.png" />
        <splash density="land-mdpi" src="www/img/splash.png" />
        <splash density="land-hdpi" src="www/img/splash.png" />
        <splash density="land-xhdpi" src="www/img/splash.png" />
    </platform>

    <platform name="ios">
        <splash height="480" src="img/ios/splash/Default~iphone.png" width="320" />
        <splash height="960" src="img/ios/splash/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="img/ios/splash/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="img/ios/splash/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1136" src="img/ios/splash/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="img/ios/splash/Default-667h.png" width="750" />
        <splash height="2208" src="img/ios/splash/Default-736h.png" width="1242" />
        <icon src="img/ios/icon/icon-AppStore@2x.png" />
        <icon height="29" src="img/ios/icon/icon-Small.png" width="29" />
        <icon height="58" src="img/ios/icon/icon-Small@2x.png" width="58" />
        <icon height="87" src="img/ios/icon/icon-Small@3x.png" width="87" />
        <icon height="40" src="img/ios/icon/icon-Small-40.png" width="40" />
        <icon height="80" src="img/ios/icon/icon-Small-40@2x.png" width="80" />
        <icon height="50" src="img/ios/icon/icon-Small-50.png" width="50" />
        <icon height="100" src="img/ios/icon/icon-Small-50@2x.png" width="100" />
        <icon height="72" src="img/ios/icon/icon-72.png" width="72" />
        <icon height="144" src="img/ios/icon/icon-72@2x.png" width="144" />
        <icon height="60" src="img/ios/icon/icon-60@2x.png" width="60" />
        <icon height="120" src="img/ios/icon/icon-60@2x.png" width="120" />
        <icon height="180" src="img/ios/icon/icon-60@3x.png" width="180" />
        <icon height="167" src="img/ios/icon/icon-83.5@2x.png" width="167" />
        <icon height="76" src="img/ios/icon/icon-76.png" width="76" />
        <icon height="152" src="img/ios/icon/icon-76@2x.png" width="152" />
        <icon height="512" src="img/ios/icon/icon-AppStore.png" width="512" />
        <icon height="1024" src="img/ios/icon/icon-AppStore@2x.png" width="1024" />
        <icon height="1800" src="img/ios/icon/icon-AppStore@2x.png" width="1800" />
    </platform>

    <preference name="xwalkVersion" value="18+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
